<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Profile Page</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap" rel="stylesheet">
    <style>
        body {
            margin: 0;
            font-family: 'Inter', sans-serif;
            background-color: #1e1e1e;
            color: #f0f0f0;
        }

        .container {
            max-width: 1000px;
            margin: 40px auto;
            display: flex;
            justify-content: space-between;
            gap: 40px;
            padding: 20px;
            border: 1px solid #333;
            border-radius: 12px;
        }

        .left {
            flex: 2;
        }

        .profile-header {
            display: flex;
            align-items: center;
            gap: 20px;
        }

        .profile-pic {
            width: 100px;
            height: 100px;
            border-radius: 50%;
            object-fit: cover;
            border: 3px solid #00aaff;
        }

        .info h2 {
            margin: 0;
            font-size: 1.2rem;
        }

        .info p {
            margin: 4px 0;
            color: #ccc;
        }

        .edit-button {
            margin-top: 10px;
            padding: 8px 20px;
            background-color: #4caf50;
            color: white;
            border: none;
            border-radius: 6px;
            cursor: pointer;
            font-weight: 600;
        }

            .edit-button:hover {
                background-color: #3e8e41;
            }

        .field-group {
            margin-top: 30px;
        }

            .field-group label {
                display: block;
                margin: 12px 0 6px;
                font-weight: 500;
            }

            .field-group input {
                width: 100%;
                padding: 10px;
                border: none;
                border-radius: 6px;
                background-color: #333;
                color: white;
            }

        .right {
            flex: 1;
            border-left: 1px solid #333;
            padding-left: 20px;
        }

        .stats {
            font-size: 0.95rem;
            color: #ccc;
        }

            .stats h3 {
                color: #fff;
                font-size: 1rem;
                margin-bottom: 10px;
            }

            .stats ul {
                list-style: none;
                padding-left: 0;
            }

            .stats li {
                margin-bottom: 8px;
            }

        .editable-form {
            display: none;
            margin-top: 10px;
        }

        .read-only {
            display: block;
        }
    </style>
</head>

    <div class="container">
        <div class="left">
            <div class="profile-header">
                <img src="https://i.pinimg.com/originals/7f/fc/4f/7ffc4f7b8a9476b53545eb476837408d.png" alt="Profile" class="profile-pic" />
                <div class="info">
                    <h2>Aleksi (Username)</h2>
                    <p>Aleksi Häyrynenn, ICT-Student</p>
                    <p>HAMK</p>
                    <button class="edit-button" onclick="toggleEdit()">Edit</button>
                </div>
            </div>

            <div class="field-group">
                <label>Username:</label>
                <p>Aleksi</p>

                <label>Email:</label>
                <p>AleksiemaiI@gmail.com</p>

                <div id="occupationCompanyView" class="read-only">
                    <label>Occupation:</label>
                    <p id="occupationText">ICT-Student</p>

                    <label>Company:</label>
                    <p id="companyText">HAMK</p>
                </div>

                <form id="editForm" class="editable-form" onsubmit="saveForm(event)">
                    <label for="occupationInput">Occupation:</label>
                    <input type="text" id="occupationInput" value="ICT-Student" />

                    <label for="companyInput">Company:</label>
                    <input type="text" id="companyInput" value="HAMK" />

                    <button type="submit" class="edit-button" style="margin-top: 15px;">Save</button>
                </form>
            </div>

            <div class="field-group">
                <h3>Change password:</h3>
                <label>Old password</label>
                <input type="password" placeholder="Old password" />

                <label>New password</label>
                <input type="password" placeholder="New password" />

                <label>Re-type new password</label>
                <input type="password" placeholder="Re-type new password" />
            </div>
        </div>

        <div class="right">
            <div class="stats">
                <h3>Task Stats</h3>
                <ul>
                    <li>Lifetime tasks done</li>
                    <li>Lifetime projects</li>
                    <li>Tasks reviewed</li>
                    <li>Late submissions</li>
                </ul>
            </div>
        </div>
    </div>

@section Scripts {
    <script>
        let isEditing = false;

        function toggleEdit() {
          isEditing = !isEditing;
          document.getElementById('editForm').style.display = isEditing ? 'block' : 'none';
          document.getElementById('occupationCompanyView').style.display = isEditing ? 'none' : 'block';
          document.querySelector('.edit-button').textContent = isEditing ? 'Cancel' : 'Edit';
        }

        function saveForm(event) {
          event.preventDefault();
          const occupation = document.getElementById('occupationInput').value;
          const company = document.getElementById('companyInput').value;

          document.getElementById('occupationText').textContent = occupation;
          document.getElementById('companyText').textContent = company;

          toggleEdit();
        }
    </script>

}

